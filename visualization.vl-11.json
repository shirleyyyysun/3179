{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 200,
  "title": "SARS Cases per Country (2003)",
  "data": {
    "url": "https://raw.githubusercontent.com/shirleyyyysun/3179/main/summary_data_clean.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {"filter": "datum['Cumulative total cases'] > 0"},
    {"filter": "datum['Number of deaths'] >= 0"},
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Cumulative total cases",
      "type": "quantitative",
      "title": "Cumulative total cases",
      "axis": {"tickCount": 7},
      "scale": {"type": "log", "domain": [1, 6000]}
    },
    "y": {
      "field": "Number of deaths",
      "type": "quantitative",
      "axis": {"tickCount": 5},
      "scale": {"type": "linear", "domain": [1, 400]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#bae4bc",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country/Region", "type": "nominal"},
          {
            "field": "Cumulative total cases",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Cumulative male cases",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Cumulative female cases",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Number of deaths", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "line-bottom",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country/Region", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country/Region'] == 'China' || datum['Country/Region'] == 'Vietnam' || datum['Country/Region'] == 'New Zealand' || datum['Country/Region'] == 'Hong Kong SAR, China' || datum['Country/Region'] == 'Canada'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country/Region", "type": "nominal"},
          {
            "field": "Cumulative total cases",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Cumulative male cases",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Cumulative female cases",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Number of deaths", "type": "quantitative", "format": ","}
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "titleFontSize": 14,
      "grid": false
    },
    "header": {"labelFont": "Open Sans", "titleFont": "Open Sans"},
    "mark": {"font": "Open Sans"},
    "legend": {"labelFont": "Open Sans", "titleFont": "Open Sans"},
    "title": {"font": "Open Sans"},
    "style": {"cell": {"stroke": "transparent"}},
    "text": {"align": "center", "fontWeight": "bold", "font": "Open Sans"}
  }
}